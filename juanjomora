            <input type="tel" id="phoneNumber" placeholder="Ej: +573001234567" required>
        </div>

        <div class="form-group">
            <label>Plantillas de mensajes:</label>
            <div class="templates">
                <button type="button" class="template-btn" onclick="useTemplate('¡Hola [tu nombre]! Quiero conseguir ya mis objetivos. ¿Cómo puedo hacerlo?')">
                    ¡Hola [tu nombre]! Quiero conseguir ya mis objetivos. ¿Cómo puedo hacerlo?
                </button>
                <button type="button" class="template-btn" onclick="useTemplate('Hola [tu nombre], quiero que me ayudes con mi cambio, mi nombre es...')">
                    Hola [tu nombre], quiero que me ayudes con mi cambio, mi nombre es...
                </button>
            </div>
        </div>

        <div class="form-group">
            <label for="message">Mensaje personalizado:</label>
            <textarea id="message" placeholder="Escribe tu mensaje aquí..."></textarea>
            <div class="char-counter" id="charCounter">0 caracteres</div>
        </div>

        <div class="form-group">
            <div class="preview" id="preview" style="display: none;">
                <strong>Vista previa del mensaje:</strong>
                <div id="previewContent"></div>
            </div>
        </div>

        <button type="button" class="generate-btn" onclick="generateLink()">
            Generar Enlace de WhatsApp
        </button>

        <div class="result" id="result">
            <label>Tu enlace de WhatsApp:</label>
            <div style="word-break: break-all; margin: 10px 0; padding: 10px; background: white; border-radius: 5px; font-family: monospace;" id="generatedLink"></div>
            <div>
                <button type="button" class="copy-btn" onclick="copyLink()">Copiar Enlace</button>
                <button type="button" class="open-btn" onclick="openLink()">Abrir WhatsApp</button>
            </div>
        </div>
    </div>

    <script>
        let generatedURL = '';

        // Contador de caracteres y vista previa
        const messageInput = document.getElementById('message');
        const charCounter = document.getElementById('charCounter');
        const preview = document.getElementById('preview');
        const previewContent = document.getElementById('previewContent');

        messageInput.addEventListener('input', function() {
            const length = this.value.length;
            charCounter.textContent = `${length} caracteres`;
            
            if (length > 0) {
                preview.style.display = 'block';
                previewContent.textContent = this.value;
            } else {
                preview.style.display = 'none';
            }
        });

        function useTemplate(template) {
            messageInput.value = template;
            messageInput.dispatchEvent(new Event('input'));
        }

        function generateLink() {
            const phoneNumber = document.getElementById('phoneNumber').value.trim();
            const message = document.getElementById('message').value.trim();

            if (!phoneNumber) {
                alert('Por favor, ingresa un número de teléfono.');
                return;
            }

            if (!message) {
                alert('Por favor, ingresa un mensaje.');
                return;
            }

            // Limpiar el número de teléfono
            const cleanPhone = phoneNumber.replace(/\D/g, '');
            
            // Codificar el mensaje para URL
            const encodedMessage = encodeURIComponent(message);
            
            // Generar la URL de WhatsApp
            generatedURL = `https://wa.me/${cleanPhone}?text=${encodedMessage}`;
            
            // Mostrar el resultado
            document.getElementById('generatedLink').textContent = generatedURL;
            document.getElementById('result').classList.add('show');
        }

        function copyLink() {
            if (!generatedURL) return;
            
            navigator.clipboard.writeText(generatedURL).then(() => {
                const copyBtn = document.querySelector('.copy-btn');
                const originalText = copyBtn.textContent;
                copyBtn.textContent = '¡Copiado!';
                copyBtn.style.background = '#28a745';
                
                setTimeout(() => {
                    copyBtn.textContent = originalText;
                    copyBtn.style.background = '#007bff';
                }, 2000);
            }).catch(() => {
                // Fallback para navegadores que no soportan clipboard API
                const textArea = document.createElement('textarea');
                textArea.value = generatedURL;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                alert('Enlace copiado al portapapeles');
            });
        }

        function openLink() {
            if (!generatedURL) return;
            window.open(generatedURL, '_blank');
        }

        // Validación de número de teléfono en tiempo real
        document.getElementById('phoneNumber').addEventListener('input', function(e) {
            let value = e.target.value;
            // Permitir solo números, espacios, guiones y el símbolo +
            value = value.replace(/[^\d\s\-\+]/g, '');
            e.target.value = value;
        });
    </script>
</body>
